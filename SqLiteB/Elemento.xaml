<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqLiteB.Elemento">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="10">
            <Label x:Name="mensaje"/>
            <Label Text="Nombre:"/>
            <Entry x:Name="Nombre" Placeholder="Nombre"/>
            
            <Label Text="Usuario"/>
            <Entry x:Name="Usuario" Placeholder="Usuario"/>

            <Label Text="Contrasena: "/>
            <Entry x:Name="Contrasena" Placeholder="Contrasena"/>

            <Button x:Name="btn_actualizar" Text="ACTUALIZAR" Clicked="btn_actualizar_Clicked"  BackgroundColor="ForestGreen" TextColor="Black" FontAttributes="Bold"/>
            <Button x:Name="btn_eliminar" Text="ELIMINAR" Clicked="btn_eliminar_Clicked"  BackgroundColor="OrangeRed" TextColor="Black" FontAttributes="Bold"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>