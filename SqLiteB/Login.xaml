<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqLiteB.Login">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la constrasena" IsPassword="True"/>

            <Button x:Name="btnLogin" Text="Iniciar sesion" Clicked="btnLogin_Clicked"/>
            <Button x:Name="btnRegistro" Text="Registrar" Clicked="btnRegistro_Clicked"/>
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>